{{!
    @template tool_tallerbehat/entries_list
     Template for the list of etries.
     Classes required for JS:
      * tool_tallerbehat_entries_list
     Data attributes required for JS:
      * data-entryid
      * data-action
     Context variables required for this template:
    -
     Example context (json):
    {
        "contents": "Here goes the list of entries",
        "addlink": "#"
    }
}}
<div class="tool_tallerbehat_entries_list">
    <h2>{{#str}} helloworld , tool_tallerbehat {{/str}}</h2>
    <p>{{#str}} youareviewing , tool_tallerbehat {{/str}}</p>
    {{{contents}}}
    <br>
    <p>
        <a role="button" href="{{addlink}}" class="btn btn-primary">{{#str}} newentry , tool_tallerbehat {{/str}}</a>
    </p>
</div>
{{#js}}
    require(['tool_tallerbehat/confirm'], function(c) {
        c.init('[data-action=deleteentry]');
    });
{{/js}}
